<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Basketball Player Details</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-image: url("https://clipart-library.com/images/kcMK95Aki.gif");
            background-size: contain;
        }

        .navbar {
            background-color: #333;
            color: #fff;
            padding: 10px;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            text-align: center;
        }

        h1, h2, h3, p {
            margin: 0;
        }

        img {
            height: 200px;
            margin-top: 10px;
        }

        .players-container {
            margin-top: 30px;
            
        }

        .players-container h2 {
            margin-top: 0;
        }

        form {
            margin-top: 20px;
        }
    </style>
</head>
<body>

<div class="navbar">
    <h1>Basketball Player Details</h1>
</div>

<div class="container">
    <h2>{{thePlayer.name}}</h2>

    <h3>Position: {{thePlayer.position}}</h3>
    <p>Team: {{thePlayer.team}}</p>
    <p>Height: {{thePlayer.height}}</p>
    <p>Weight: {{thePlayer.weight}}</p>
    <p>Age: {{thePlayer.age}}</p>

    <div class="players-container">
        Courts: {{thePlayer.court.name}}
    </div>
</div>

<br>

<a href="/players/edit/{{thePlayer._id}}"><button>Edit This Player</button></a>

<br>
<button onclick="deletePlayer('{{thePlayer._id}}')">Delete This Player</button>

<script>
    function deletePlayer(playerId) {
        fetch(`/players/delete/${playerId}`, { method: 'POST' })
            .then(() => {
                window.location.href = '/players';
            })
            .catch((error) => {
                console.error(error);
                // Handle error if necessary
            });
    }
</script>
